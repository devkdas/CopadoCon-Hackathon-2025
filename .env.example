# CopadoCon 2025 Hackathon Configuration
# Copy this file to .env and configure with your actual values

# ENVIRONMENT CONFIGURATION
# Set to 'development', 'production', or 'testing'
ENVIRONMENT=development

# APPLICATION SETTINGS
DEBUG=true
LOG_LEVEL=INFO
PORT=8080
HOST=0.0.0.0

# SALESFORCE INTEGRATION
SALESFORCE_USERNAME=your_salesforce_username
SALESFORCE_PASSWORD=your_salesforce_password
SALESFORCE_SECURITY_TOKEN=your_security_token
SALESFORCE_DOMAIN=your_domain.salesforce.com

# AI CONFIGURATION
OPENAI_API_KEY=your_openai_api_key
COPADO_AI_API_KEY=your_copado_ai_key

# GITHUB INTEGRATION
GITHUB_TOKEN=your_github_token
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# JIRA INTEGRATION
JIRA_SERVER=https://your-domain.atlassian.net
JIRA_USERNAME=your_jira_username
JIRA_API_TOKEN=your_jira_api_token

# SLACK INTEGRATION
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# DATABASE CONFIGURATION
DATABASE_URL=sqlite:///./observability.db
REDIS_URL=redis://localhost:6379

# PRODUCTION OVERRIDES
# For production deployment, use these values:
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=INFO
# SALESFORCE_USERNAME=production_salesforce_username
# SALESFORCE_PASSWORD=production_salesforce_password
# SALESFORCE_SECURITY_TOKEN=production_security_token
# SALESFORCE_DOMAIN=your-prod-domain.salesforce.com
# OPENAI_API_KEY=production_openai_api_key
# COPADO_AI_API_KEY=production_copado_ai_key
# GITHUB_TOKEN=production_github_token
# GITHUB_WEBHOOK_SECRET=production_webhook_secret
# JIRA_USERNAME=production_jira_username
# JIRA_API_TOKEN=production_jira_api_token
# SLACK_BOT_TOKEN=xoxb-production-slack-bot-token
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/production/webhook/url
# DATABASE_URL=postgresql://user:password@prod-db:5432/observability
# REDIS_URL=redis://prod-redis:6379
